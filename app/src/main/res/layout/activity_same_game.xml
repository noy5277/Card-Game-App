<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_light"
    app:layout_marginBaseline="15sp"
    tools:context=".SameGame">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/levelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115">

        <LinearLayout
            android:layout_width="153dp"
            android:layout_height="53dp"

            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.462"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.609">

            <TextView
                android:id="@+id/levelname"
                style="@android:style/Widget.DeviceDefault.Light.TextView"
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/concert_one"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Level"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/WITPlevel"
                android:layout_width="41dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/concert_one"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="0"
                android:textSize="25dp"
                android:textStyle="bold"
                android:typeface="serif" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006">

        <ImageView
            android:id="@+id/rewardadsrun"
            android:layout_width="121dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:src="@drawable/top_coins"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.992"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4" />

        <TextView
            android:id="@+id/WITPcoins"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rewardadsrun"
            app:layout_constraintHorizontal_bias="0.112"
            app:layout_constraintStart_toStartOf="@+id/rewardadsrun"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/hartImage"
            android:layout_width="130dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/top_lives" />

        <TextView
            android:id="@+id/WIThartCount"
            android:layout_width="54dp"
            android:layout_height="47dp"

            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/hartImage"
            app:layout_constraintHorizontal_bias="0.752"
            app:layout_constraintStart_toStartOf="@+id/hartImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.583" />

    </androidx.constraintlayout.widget.ConstraintLayout>

